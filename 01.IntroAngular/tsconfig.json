{
    "compilerOptions": {
      "target": "es6",
      "module": "system", //or CommonJS
      "noImplicitAny": true, //always to declare type of variable
      "removeComments": true,
      "preserveConstEnums": true,
      "outDir": "./dist/",
      "sourceMap": true //debug inside typescript files
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "node_modules"
    ]
}